<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/txv_carrito_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre"
            android:textSize="20sp"
            android:layout_marginRight="160dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/txv_carrito_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="$000.00"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txv_car_eliminar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Eliminar"
                    android:gravity="center_vertical"
                    android:textColor="#D31515"/>
                <!--android:drawableLeft="@drawable/ic_cancel"-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:paddingLeft="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txv_carr_min"
                    android:layout_width="@dimen/size_b"
                    android:layout_height="@dimen/size_b"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txv_carr_pedi"
                    android:layout_width="@dimen/size_b"
                    android:layout_height="@dimen/size_b"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:text="00"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txv_carr_plus"
                    android:layout_width="@dimen/size_b"
                    android:layout_height="@dimen/size_b"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>